
@using eCommerce.Data;
@using eCommerce.Data.Enums;
@using eCommerce.Data.ViewModels;
@model NewMovieVM

@{
    ViewData["Title"] = "Update movie";
}
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4 class="col-md-8 offset-5">@Localizer["updateMovie"]</h4>
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">

                        <div class="col-md-4 offset-4 text-center">
                            <img width="100%" id="ImageUrlPreview" />
                        </div>
                       
                            <div class="form-group my-2">
                            <label asp-for="Name" class="control-label">@Localizer["movieName"]</label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        <div class="form-group my-2">
                            <label asp-for="StartDate" class="control-label">@Localizer["movieStartDate"]</label>
                                <input asp-for="StartDate" type="date" class="form-control" />
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>
                        <div class="form-group my-2">
                            <label asp-for="Price" class="control-label">@Localizer["moviePrice"]</label>
                                <input asp-for="Price" type="number" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        <div class="form-group my-2">
                            <label asp-for="ImageURL" class="control-label">@Localizer["moviePosterUrl"]</label>
                                <input asp-for="ImageURL" class="form-control" />
                                <span asp-validation-for="ImageURL" class="text-danger"></span>
                            </div>


                        <div class="form-group  d-none">
                                <label asp-for="CinemaId" class="control-label"></label>
                                <select asp-for="CinemaId" class="form-control" asp-items="ViewBag.Cinemas"></select>
                                <span asp-validation-for="CinemaId" class="text-danger"></span>
                            </div>
                        <div class="form-group my-2">
                            <label asp-for="MovieCategory" class="control-label">@Localizer["movieCategory"]</label>
                                <select asp-for="MovieCategory" class="form-control" asp-items="Html.GetEnumSelectList<MovieCategory>()"></select>
                                <span asp-validation-for="MovieCategory" class="text-danger"></span>
                            </div>
                        <div class="form-group  d-none">
                                <label asp-for="ProducerId" class="control-label"></label>
                                <select asp-for="ProducerId" class="form-control" asp-items="ViewBag.Producers"></select>
                                <span asp-validation-for="ProducerId" class="text-danger"></span>
                            </div>
                            <div class="form-group d-none">
                                <label asp-for="ActorIds" class="control-label"></label>
                                <select asp-for="ActorIds" class="form-control" asp-items="ViewBag.Actors" multiple></select>
                                <span asp-validation-for="ActorIds" class="text-danger"></span>
                            </div>
                   
                        <div class="col-md-12  my-2">
                            <div class="form-group">
                                <label asp-for="Description" class="control-label">@Localizer["movieDescription"]</label>
                                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                  

                    <div class="form-group">
                 
                        <input type="submit" value=@Localizer["movieUpdate"] class="button-33 mt-3" style="width:100%;background:#7E8F1D" />
                    </div>

                </form>

            </div>
        </div>

    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $("#ImageURL").val();
        });
        $("#ImageURL").on("change", function () {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $(this).val();
        })
    </script>
}
